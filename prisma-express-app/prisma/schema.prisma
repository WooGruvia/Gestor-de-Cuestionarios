generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Categoria {
  id              Int      @id @default(autoincrement())
  nombre          String
  descripcion     String?
  fecha_creacion  DateTime @default(now())
  activo          Boolean  @default(true)
  subcategorias  Subcategoria[]
}
model Subcategoria {
  id             Int      @id @default(autoincrement())
  nombre         String
  descripcion    String?
  fecha_creacion DateTime @default(now())
  activo         Boolean  @default(true)
  categoriaId    Int
  categoria      Categoria @relation(fields: [categoriaId], references: [id])
}
model RangoEdad {
  id          Int          @id @default(autoincrement())
  nombre      String
  edad_min    Int
  edad_max    Int
  dificultades Dificultad[]
}
model Dificultad {
  id           Int       @id @default(autoincrement())
  nombre       String 
  rangoEdadId  Int
  rangoEdad    RangoEdad @relation(fields: [rangoEdadId], references: [id])
}
model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String  
  nombre    String?
  rol       String   @default("ESTUDIANTE") 
  activo    Boolean  @default(true)
  createdAt DateTime @default(now())
}